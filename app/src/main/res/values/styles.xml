    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
       <!--<item name="android:background">@mipmap/splah</item>-->
    </style>

    <style name="title_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
    </style>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension"/>
        <attr name="border_inside_color" format="color"/>
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <style name="menu">
        <item name="android:background">@drawable/menu_selector</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_left</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right_black_24dp</item>
        <item name="android:drawablePadding">@dimen/padding_left</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="long_blue_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">55dp</item>
        <item name="android:background">@drawable/blue_btn_shape</item>
        <item name="android:textSize">@dimen/sub_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_style">
        <item name="android:background">@drawable/blue_btn_shape</item>
        <item name="android:textSize">@dimen/sub_text</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="home_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
