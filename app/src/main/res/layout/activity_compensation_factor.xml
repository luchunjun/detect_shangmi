<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/compensationFactor"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/lightDark"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/title_bar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/linearLayout"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/compensationFactorSettingItems"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@drawable/linear_divider"
                android:orientation="vertical"
                android:paddingBottom="@dimen/paddingBottom_x4"
                android:paddingTop="@dimen/paddingBottom_x3"
                android:showDividers="middle"/>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/paddingBottom_x_5"
            android:layout_marginEnd="@dimen/paddingLeft_x3"
            android:layout_marginStart="@dimen/paddingLeft_x3"
            android:layout_marginTop="@dimen/paddingBottom_x_5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveCompensationFactorButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/paddingLeft_x2"
                android:layout_weight="1.0"
                android:background="@drawable/button_style"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingTop="@dimen/paddingBottom"
                android:text="保存"
                android:textColor="@color/default_white"
                android:textSize="@dimen/font_size_normal"/>

            <Button
                android:id="@+id/resetCompnesationFactorButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/paddingLeft_x2"
                android:layout_weight="1.0"
                android:background="@drawable/button_style"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingTop="@dimen/paddingBottom"
                android:text="重置"
                android:textColor="@color/default_white"
                android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>