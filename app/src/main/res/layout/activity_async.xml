<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/upload_header"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="4.0"
        android:background="@drawable/bottom_line"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingBottom"
        android:paddingTop="@dimen/paddingBottom">

        <TextView
            android:id="@+id/unUpload_count"
            android:layout_width="170.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_rectangle"
            android:gravity="center"
            android:paddingBottom="@dimen/paddingBottom"
            android:paddingTop="@dimen/paddingBottom"
            android:text="未上传(0)"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_header"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_below="@id/upload_header"
        android:layout_weight="3.0"
        android:background="@color/backGray"
        android:paddingBottom="1.0px">

        <TextView
            android:id="@+id/detect_time"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4.0"
            android:background="@color/list_background_normal"
            android:gravity="center"
            android:paddingBottom="@dimen/paddingBottom2"
            android:paddingTop="@dimen/paddingBottom2"
            android:text="检测时间"
            android:textSize="@dimen/font_size_min"/>

        <TextView
            android:id="@+id/detect_plate_number"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4.0"
            android:background="@color/list_background_normal"
            android:gravity="center"
            android:paddingBottom="@dimen/paddingBottom2"
            android:paddingTop="@dimen/paddingBottom2"
            android:text="车牌号"
            android:textSize="@dimen/font_size_min"/>

        <TextView
            android:id="@+id/detect_truck_type"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:background="@color/list_background_normal"
            android:gravity="center"
            android:paddingBottom="@dimen/paddingBottom2"
            android:paddingTop="@dimen/paddingBottom2"
            android:text="轴数"
            android:textSize="@dimen/font_size_min"/>

        <TextView
            android:id="@+id/detect_info"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:background="@color/list_background_normal"
            android:gravity="center"
            android:paddingBottom="@dimen/paddingBottom2"
            android:paddingTop="@dimen/paddingBottom2"
            android:text="重量"
            android:textSize="@dimen/font_size_min"/>

        <TextView
            android:id="@+id/detect_status"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/list_background_normal"
            android:gravity="center"
            android:paddingBottom="@dimen/paddingBottom2"
            android:paddingTop="@dimen/paddingBottom2"/>
    </LinearLayout>

    <ListView
        android:id="@+id/unUpload"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_below="@id/table_header"
        android:layout_weight="30.0"
        android:paddingBottom="@dimen/paddingBottom"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="3.0">

        <Button
            android:id="@+id/asyncbtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/paddingLeft_x3"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/button"
            android:text="同步云服务"
            android:textColor="@color/backgroundcolor"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>
</LinearLayout>