<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <include layout="@layout/title_bar_layout" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView61"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.0"
            android:gravity="center_vertical"
            android:text="检测时间:"
            android:textSize="@dimen/font_size_big"/>

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="9.0"
            android:enabled="false"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="@dimen/paddingBottom"
            android:textSize="@dimen/font_size_big"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewCarNumberPic"
        android:layout_width="205dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/paddingLeft_x3"
        android:layout_marginRight="@dimen/paddingLeft_x3"
        android:layout_marginTop="5dp"
        android:onClick="bigPic"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="车牌号码:"
            android:textSize="@dimen/font_size_big"/>

        <EditText
            android:id="@+id/editTextGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="8"
            android:background="@drawable/bottom_line"
            android:enabled="true"
            android:paddingStart="@dimen/paddingLeft"
            android:textSize="@dimen/font_size_big"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/axis_other_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/axis_Type_c"
            android:textSize="@dimen/font_size_big"/>
        <TextView
            android:id="@+id/truckTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:enabled="false"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_edit"
            android:onClick="setAxisType"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/paddingLeft"
            android:textSize="@dimen/font_size_big"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/truckLabel"
            android:textSize="@dimen/font_size_normal"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="65dp"
            android:id="@+id/truckIcon"
            android:layout_height="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="车辆重量："
            android:textSize="@dimen/font_size_big"/>
        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:enabled="false"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/paddingLeft"
            android:textSize="@dimen/font_size_big"/>
        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/weight"
            android:textSize="@dimen/font_size_big"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="通过速度："
            android:textSize="@dimen/font_size_big"/>
        <EditText
            android:id="@+id/editTextSpeed"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bottom_line"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/paddingLeft"
            android:singleLine="true"
            android:textSize="@dimen/font_size_big"/>
        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/IDS_speed_unit"
            android:textSize="@dimen/font_size_big"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/limit_weight_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="车辆限重："
            android:textSize="@dimen/font_size_big"/>
        <EditText
            android:id="@+id/editLimitWeight"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bottom_line"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/paddingLeft"
            android:singleLine="true"
            android:textSize="@dimen/font_size_big"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/weight"
            android:textSize="@dimen/font_size_big"/>>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/over_weight_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="超载重量："
                android:textSize="@dimen/font_size_big"/>
            <TextView
                android:id="@+id/editTextOverWeight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_line"
                android:enabled="false"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/paddingLeft"
                android:textSize="@dimen/font_size_big"/>
                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="@string/weight"
                    android:textSize="@dimen/font_size_big"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="检测人员："
            android:textSize="@dimen/font_size_big"/>

        <EditText
            android:id="@+id/editTextChecker"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bottom_line"
            android:enabled="false"
            android:paddingStart="@dimen/paddingLeft"
            android:singleLine="true"
            android:textSize="@dimen/font_size_big"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="是否超限："
            android:textSize="@dimen/font_size_big"/>

        <Switch
            android:id="@+id/editTextIsOverWeight"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:enabled="false"
            android:text=""
            android:textOff="否"
            android:textOn="是"
            android:textSize="@dimen/font_size_big"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/paddingBottom_x2">
        <Button
            android:id="@+id/buttonSingleSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/paddingLeft_x2"
            android:layout_marginStart="@dimen/paddingLeft_x2"
            android:background="@drawable/button_style"
            android:text="@string/save"
            android:onClick="save"
            android:textColor="@color/default_white"
            android:textSize="@dimen/font_size_normal"/>
        <Button
            android:id="@+id/buttonSingleDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/paddingLeft_x2"
            android:layout_marginStart="@dimen/paddingLeft_x2"
            android:layout_weight="1.0"
            android:background="@drawable/button_style"
            android:text="删除"
            android:onClick="delete"
            android:textColor="@color/default_white"
            android:textSize="@dimen/font_size_normal"/>

        <Button
            android:id="@+id/buttonSinglePrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/paddingLeft_x2"
            android:layout_marginStart="@dimen/paddingLeft_x2"
            android:layout_weight="1.0"
            android:background="@drawable/button_style"
            android:text="打印"
            android:onClick="print"
            android:textColor="@color/default_white"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>

</LinearLayout>
