<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lu.portable.detect.eparking.MainActivity"
    >


    <TextView
       android:textSize="20dp"
       android:id="@+id/IP_tv"
       android:text="目标IP地址1"
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:layout_alignBaseline="@+id/ip_ET"
       android:layout_alignBottom="@+id/ip_ET"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="0dp"/>

    <EditText
        android:text="192.168.0.201"
        android:id="@+id/ip_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="140dp"
        android:layout_y="0dp"/>

    <Button
        android:text="连接1"
        android:id="@+id/Connect_Bt"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:onClick="Connect_onClick"
        android:layout_x="0dp"
        android:layout_y="50dp"/>

    <Button
        android:text="断开1"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:id="@+id/Disconnect1"
        android:onClick="Disconnect1"
        android:layout_x="65dp"
        android:layout_y="50dp"/>

    <Button
        android:text="抬杆1"
        android:id="@+id/UP_Button"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:onClick="UP_Button"
        android:layout_x="130dp"
        android:layout_y="50dp"/>

    <Button
        android:text="模拟触发1"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:id="@+id/Trigger_Button"
        android:onClick="Trigger_Button"
        android:layout_x="200dp"
        android:layout_y="50dp"/>
    <ImageView
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:id="@+id/image1"
        android:scaleType="fitCenter"
        android:layout_below="@+id/Disconnect1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="121dp" />


    <ImageView
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:id="@+id/image2"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="390dp" />

    <TextView
        android:text="识别结果1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="249dp"
        android:layout_y="159dp"
        android:id="@+id/Result1" />


</AbsoluteLayout>
